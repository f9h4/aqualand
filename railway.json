{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowMs": 600000
  },
  "variables": {
    "SECRET_KEY": {
      "description": "Clave secreta de Django - DEBE CONFIGURARSE EN RAILWAY",
      "value": ""
    },
    "DEBUG": {
      "description": "Modo debug - False en producción",
      "value": "False"
    },
    "ALLOWED_HOSTS": {
      "description": "Hosts permitidos para Django",
      "value": "*.up.railway.app,*.railway.app,localhost,127.0.0.1"
    },
    "DJANGO_LOG_LEVEL": {
      "description": "Nivel de logging de Django",
      "value": "INFO"
    },
    "PORT": {
      "description": "Puerto en el que escucha la aplicación",
      "value": "8000"
    }
  }
}
